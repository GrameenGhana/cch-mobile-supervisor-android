<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/topbar" />

    </LinearLayout>

    <org.grameenfoundation.cch.supervisor.ui.view.PagerSlidingTabStrip
        android:id="@+id/activity_view_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color_400"
        app:pstsDividerPadding="16dp"
        app:pstsDividerWidth="0dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsIndicatorColor="@color/main_color_100"
        app:pstsTabTextColor="@color/main_color_100" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_color_400" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>